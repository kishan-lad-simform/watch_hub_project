<div align="center">
<%= button_to "Logout", destroy_user_session_path, method: :delete %><br><br>
  <h1>Posts index</h1>
  <p>Find me in app/views/posts/index.html.erb</p>
  
   <%= link_to "Add Post", new_post_path %> &nbsp; &nbsp;
   <%= link_to "Profile", edit_user_registration_path(current_user.id) %> &nbsp; &nbsp;
   
  <table border=1>
    <thead>
      <tr>
        <th> Id </th>
        <th> Title </th>
        <th> Body </th>
        <th colspan="2"> Actions </th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td> <%= post.id %> </td>
          <td> <%= post.title %> </td>
          <td> <%= post.body %> </td>
          <% if can? :update, post %>
            <td> <%= link_to "Edit", edit_post_path(post.id) %> </td>
          <% end %>

          <% if can? :destroy, post %>
            <td> <%= link_to "Delete",
                            post_path(post.id),
                            data: {
                              turbo_method: :delete
                            } %> 
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>